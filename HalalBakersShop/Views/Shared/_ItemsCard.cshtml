@model Items
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@Model.ImageThumbnailUrl" alt="" style="height:100px;width:500px;">
            <div class="caption">
                <h3 class="pull-right">RS: @Model.Price.ToString("")</h3>
                <h3>
                    <a asp-controller="Items"
                       asp-action="Details"
                       asp-route-id="@Model.ItemsId">@Model.Name</a>
                </h3>
                <p>@Model.ShortDescription</p>
            </div>
            <div class="addToCart">
                <p class="button">
                    <a class="btn btn-primary" 
                       asp-controller="ShoppingCart" 
                       asp-action="AddToShoppingCart"
                       asp-route-itemId="@Model.ItemsId">Add to cart</a>
                </p>
            </div>
        </div>
    </div>